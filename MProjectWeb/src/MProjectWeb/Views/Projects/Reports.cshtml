@{
    Layout = null;
}
<div class="asd">
    <h1 class="page-header">
        <!-- Title of page -->
        Reportes
        <small>
            <!-- SubTitle of page -->
        </small>
    </h1>

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-fancyBox/source/jquery.fancybox.js"></script>
<link href="~/css/Index.css" rel="stylesheet" />
<link href="~/lib/jquery-fancyBox/source/jquery.fancybox.css" rel="stylesheet" />



@{ 

    bool st = Convert.ToBoolean(ViewBag.st);
    if (st)
    {
        
        <script>
            $(document).ready(function () {
                $(".word").fancybox({
                    'width': 600, // or whatever
                    'height': 320,
                    'type': 'iframe'
                }).click();

            });
        </script>
        <a class="word" href="@ViewBag.doc"></a>
        <div>
            <div class="alert alert-success fade in center-block" style="position:relative;width:100%">
                <a class="close" data-dismiss="alert">&times;</a>
                Se ha encontrado un reporte. <a class="word" href="@ViewBag.doc">CLICK AQUI PARA VER.</a>
            </div>
        </div>
    }
    else
    {
        <div>
            <div class="alert alert-danger fade in center-block" style="position:relative;width:100%">
                <a class="close" data-dismiss="alert">&times;</a>
                No se ha encontrado un reporte correspondiente a este Proyecto / Actividad.
            </div>
        </div>
    }
}

